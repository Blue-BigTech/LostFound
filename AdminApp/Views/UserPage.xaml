<Page
    x:Class="AdminApp.Views.UserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AdminApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls" xmlns:local1="using:AdminApp.ViewModels" xmlns:i1="using:Microsoft.Xaml.Interactivity" xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d"
    x:Name="userWindow"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <local1:UserViewModel/>
    </Page.DataContext>
    <Grid Background="#F0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".03*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width=".03*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*"></RowDefinition>
            <RowDefinition Height=".7*"></RowDefinition>
            <RowDefinition Height=".1*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="0*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="3" Background="#447295"></Grid>
        <Grid Grid.Row="1" Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Viewbox HorizontalAlignment="Left">
                    <Image Source="/Assets/logo.png"/>
                </Viewbox>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height=".7*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height=".7*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Viewbox HorizontalAlignment="Right">
                        <TextBlock Foreground="White" Text="{Binding AdminName, Mode=TwoWay}" x:Name="AdminName" PointerEntered="AdminNamePointerEntered" ></TextBlock>
                    </Viewbox>
                </Grid>
                <Grid Grid.RowSpan="3" x:Name="NavbarHoverGrid" Visibility="Collapsed" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".1*"></RowDefinition>
                        <RowDefinition Height=".5*"></RowDefinition>
                        <RowDefinition Height=".5*"></RowDefinition>
                        <RowDefinition Height=".1*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width=".2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid CornerRadius="10 10 0 0" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Background="WhiteSmoke">

                    </Grid>
                    <Grid Padding="0 0 12 0" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Background="WhiteSmoke">
                        <Viewbox HorizontalAlignment="Right">
                            <Button Click="ChangePasswordBtnClick" Content="Change Password" HorizontalAlignment="Right" Foreground="Black" Background="Transparent" BorderThickness="0" Padding="10 0 10 0">
                                <Button.Resources>
                                    <ResourceDictionary>
                                        <ResourceDictionary.ThemeDictionaries>
                                            <ResourceDictionary x:Key="Light">
                                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#447295"/>
                                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#447295"/>
                                            </ResourceDictionary>
                                        </ResourceDictionary.ThemeDictionaries>
                                    </ResourceDictionary>
                                </Button.Resources>
                            </Button>
                        </Viewbox>
                    </Grid>
                    <Grid Grid.Row="2" Padding="0 0 12 0" Grid.Column="1" Grid.ColumnSpan="2" Background="WhiteSmoke">
                        <Viewbox HorizontalAlignment="Right">
                            <Button Command="{Binding LogoutCommand}" Content="Logout" HorizontalAlignment="Right" Foreground="Black" Background="Transparent" BorderThickness="0" Padding="10 0 10 0">
                                <Button.Resources>
                                    <ResourceDictionary>
                                        <ResourceDictionary.ThemeDictionaries>
                                            <ResourceDictionary x:Key="Light">
                                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#447295"/>
                                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#447295"/>
                                            </ResourceDictionary>
                                        </ResourceDictionary.ThemeDictionaries>
                                    </ResourceDictionary>
                                </Button.Resources>
                            </Button>
                        </Viewbox>
                    </Grid>
                    <Grid CornerRadius="0 0 10 10" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Background="WhiteSmoke">

                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="0" Background="#447295"></Grid>
        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="227*"></ColumnDefinition>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="1072*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Grid.ColumnSpan="2" Background="#447295">
                <Grid.RowDefinitions>
                    <RowDefinition Height="22"></RowDefinition>
                    <RowDefinition Height=".1*"></RowDefinition>
                    <RowDefinition Height="10"></RowDefinition>
                    <RowDefinition Height=".1*"></RowDefinition>
                    <RowDefinition Height="10"></RowDefinition>
                    <RowDefinition Height=".1*"></RowDefinition>
                    <RowDefinition Height="10"></RowDefinition>
                    <RowDefinition Height=".1*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width=".16*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1" Grid.RowSpan="9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width=".1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                </Grid>

                <Grid Grid.Row="1" HorizontalAlignment="Left">
                    <Viewbox>
                        <Button Command="{Binding Path=UsersCommand}" Padding="6 0 6 0" Foreground="Black" FontWeight="Medium" Background="WhiteSmoke" CornerRadius="2"
                        VerticalAlignment="Center" Width="182" Height="32" FontSize="12" BorderBrush="Transparent" Content="Users">
                            <Button.Resources>
                                <ResourceDictionary>
                                    <ResourceDictionary.ThemeDictionaries>
                                        <ResourceDictionary x:Key="Light">
                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#447295"/>
                                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#447295"/>
                                            <SolidColorBrush x:Key="ButtonForeground" Color="#BEBEC6"/>
                                        </ResourceDictionary>
                                    </ResourceDictionary.ThemeDictionaries>
                                </ResourceDictionary>
                            </Button.Resources>

                        </Button>
                    </Viewbox>
                </Grid>

                <Grid Grid.Row="3" HorizontalAlignment="Left">
                    <Viewbox>
                        <Button Command="{Binding Path=MatchedPhotosCommand}" Padding="6 0 6 0" Foreground="Black" FontWeight="Medium" Background="WhiteSmoke" CornerRadius="2"
                        VerticalAlignment="Center" Width="182" Height="32" FontSize="12" BorderBrush="Transparent" x:Name="loginBtn" Content="Matched Photos">
                            <Button.Resources>
                                <ResourceDictionary>
                                    <ResourceDictionary.ThemeDictionaries>
                                        <ResourceDictionary x:Key="Light">
                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#447295"/>
                                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#447295"/>
                                            <SolidColorBrush x:Key="ButtonForeground" Color="#BEBEC6"/>
                                        </ResourceDictionary>
                                    </ResourceDictionary.ThemeDictionaries>
                                </ResourceDictionary>
                            </Button.Resources>

                        </Button>
                    </Viewbox>
                </Grid>
                <Grid Grid.Row="5" HorizontalAlignment="Left">
                    <Viewbox>
                        <Button Command="{Binding Path=UnmatchedPhotosCommand}" Padding="6 0 6 0" Foreground="Black" FontWeight="Medium" Background="WhiteSmoke" CornerRadius="2"
                        VerticalAlignment="Center" Width="182" Height="32" FontSize="12" BorderBrush="Transparent" Content="Unmatched Photos">
                            <Button.Resources>
                                <ResourceDictionary>
                                    <ResourceDictionary.ThemeDictionaries>
                                        <ResourceDictionary x:Key="Light">
                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#447295"/>
                                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#447295"/>
                                            <SolidColorBrush x:Key="ButtonForeground" Color="#BEBEC6"/>
                                        </ResourceDictionary>
                                    </ResourceDictionary.ThemeDictionaries>
                                </ResourceDictionary>
                            </Button.Resources>

                        </Button>
                    </Viewbox>
                </Grid>
                <Grid Grid.Row="7" HorizontalAlignment="Left">
                    <Viewbox>
                        <Button Command="{Binding Path=AllPhotosCommand}" Padding="6 0 6 0" Foreground="Black" FontWeight="Medium" Background="WhiteSmoke" CornerRadius="2"
                        VerticalAlignment="Center" Width="186" Height="32" FontSize="12" BorderBrush="Transparent" Content="All Photos Uploaded">
                            <Button.Resources>
                                <ResourceDictionary>
                                    <ResourceDictionary.ThemeDictionaries>
                                        <ResourceDictionary x:Key="Light">
                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#447295"/>
                                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#447295"/>
                                            <SolidColorBrush x:Key="ButtonForeground" Color="#BEBEC6"/>
                                        </ResourceDictionary>
                                    </ResourceDictionary.ThemeDictionaries>
                                </ResourceDictionary>
                            </Button.Resources>

                        </Button>
                    </Viewbox>
                </Grid>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"></ColumnDefinition>
                        <ColumnDefinition Width="7*"></ColumnDefinition>
                        <ColumnDefinition Width="1.2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".1*"></RowDefinition>
                            <RowDefinition Height=".7*"></RowDefinition>
                            <RowDefinition Height=".1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height=".2*"></RowDefinition>
                            <RowDefinition Height=".1*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width=".2*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width=".2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height=".5*"></RowDefinition>
                                <RowDefinition Height=".2*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height=".5*"></RowDefinition>
                                <RowDefinition Height=".1*"></RowDefinition>
                                <RowDefinition Height=".8*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Grid.Column="0">
                                <Viewbox>
                                    <TextBox Text="{Binding UserName, Mode=TwoWay}" Style="{StaticResource TextBoxStyle}"
                             PlaceholderText="User name" >
                                        <TextBox.Resources>
                                            <ResourceDictionary>
                                                <ResourceDictionary.ThemeDictionaries>
                                                    <ResourceDictionary x:Key="Light">
                                                        <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="Black"/>
                                                        <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="White"/>
                                                        <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="White"/>
                                                        <SolidColorBrush x:Key="TextControlForegroundFocused" Color="Black"/>
                                                        <SolidColorBrush x:Key="TextControlButtonForeground" Color="Black"/>
                                                        <SolidColorBrush x:Key="TextControlButtonForegroundPointerOver" Color="Black"/>
                                                    </ResourceDictionary>
                                                </ResourceDictionary.ThemeDictionaries>
                                            </ResourceDictionary>
                                        </TextBox.Resources>
                                    </TextBox>

                                </Viewbox>
                            </Grid>
                            <Grid Grid.Row="1" Grid.Column="0" Visibility="{Binding UserNameValidationMsg}">
                                <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Required" x:Name="UserNameValidationMsg" TextAlignment="Left" TextWrapping="Wrap"
                               FontSize="1" FontWeight="Medium" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"/>
                                </Viewbox>
                            </Grid>
                            <Grid Grid.Row="1" Grid.Column="2" Visibility="{Binding UserPasswordValidationMsg}">
                                <Viewbox VerticalAlignment="Center" HorizontalAlignment="center">
                                    <TextBlock Text="{Binding PasswordStrength, Mode=TwoWay}" x:Name="UserPasswordValidationMsg" TextAlignment="Left" TextWrapping="Wrap"
                               FontSize="1" FontWeight="Medium" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"/>
                                </Viewbox>
                            </Grid>
                            <Grid Grid.Row="0" Grid.Column="2">
                                <Viewbox>
                                    <TextBox Text="{Binding UserPassword, Mode=TwoWay}" Style="{StaticResource TextBoxStyle}"
                             PlaceholderText="Password" >
                                        <i1:Interaction.Behaviors>
                                            <core:EventTriggerBehavior EventName="TextChanging">
                                                <core:InvokeCommandAction Command="{Binding HoverPointerEntered}"></core:InvokeCommandAction>
                                            </core:EventTriggerBehavior>
                                        </i1:Interaction.Behaviors>

                                        <TextBox.Resources>
                                            <ResourceDictionary>
                                                <ResourceDictionary.ThemeDictionaries>
                                                    <ResourceDictionary x:Key="Light">
                                                        <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="Black"/>
                                                        <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="White"/>
                                                        <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="White"/>
                                                        <SolidColorBrush x:Key="TextControlForegroundFocused" Color="Black"/>
                                                        <SolidColorBrush x:Key="TextControlButtonForeground" Color="Black"/>
                                                        <SolidColorBrush x:Key="TextControlButtonForegroundPointerOver" Color="Black"/>
                                                    </ResourceDictionary>
                                                </ResourceDictionary.ThemeDictionaries>
                                            </ResourceDictionary>
                                        </TextBox.Resources>
                                    </TextBox>

                                </Viewbox>
                            </Grid>

                            <!--<Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0*"></ColumnDefinition>
                                    <ColumnDefinition Width="5*"></ColumnDefinition>
                                    <ColumnDefinition Width="0*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0"></Grid>
                                <Grid x:Name="NotificationPopupGrid" Grid.Column="1" Visibility="{Binding NotificationPopupGridVis}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0*"></RowDefinition>
                                        <RowDefinition Height="4*"></RowDefinition>
                                        <RowDefinition Height="0*"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="1">
                                        <RelativePanel>
                                            <Viewbox>
                                                <Popup IsOpen="{Binding NotificationPopup}" x:Name="NotificationPopup" RelativePanel.AlignRightWithPanel="True"
                                   Width="110" Height="110" IsLightDismissEnabled="True" LightDismissOverlayMode="On"  >
                                                    <Popup.ChildTransitions>
                                                        <TransitionCollection>
                                                            <PaneThemeTransition Edge="Right"/>
                                                        </TransitionCollection>
                                                    </Popup.ChildTransitions>
                                                    <Grid Background="#1A1C22" CornerRadius="10 10 10 10" HorizontalAlignment="Center" Height="60" Width="300">
                                                        <Grid.ColumnDefinitions>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Margin="3 0 0 11">
                                                            <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Height="35">
                                                                <TextBlock Text="{Binding NotificationMessage, Mode=TwoWay}" x:Name="NotificationMessage" TextAlignment="Center" Padding="0 0 0 0" 
                                                       FontSize="1" FontWeight="Medium" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                                            </Viewbox>
                                                        </Grid>
                                                    </Grid>
                                                </Popup>
                                            </Viewbox>
                                        </RelativePanel>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="2"></Grid>
                            </Grid>-->
                            
                            <Grid Grid.Row="3" Grid.Column="0">
                                <Viewbox>
                                    <TextBox Text="{Binding DistrictCorp, Mode=TwoWay}" Style="{StaticResource TextBoxStyle}"
                                        PlaceholderText="District / city corporation" >
                                        <TextBox.Resources>
                                            <ResourceDictionary>
                                                <ResourceDictionary.ThemeDictionaries>
                                                    <ResourceDictionary x:Key="Light">
                                                        <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="Black"/>
                                                        <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="White"/>
                                                        <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="White"/>
                                                        <SolidColorBrush x:Key="TextControlForegroundFocused" Color="Black"/>
                                                        <SolidColorBrush x:Key="TextControlButtonForeground" Color="Black"/>
                                                        <SolidColorBrush x:Key="TextControlButtonForegroundPointerOver" Color="Black"/>
                                                    </ResourceDictionary>
                                                </ResourceDictionary.ThemeDictionaries>
                                            </ResourceDictionary>
                                        </TextBox.Resources>
                                    </TextBox>

                                </Viewbox>
                            </Grid>
                            <Grid Grid.Row="3" Grid.Column="2">
                                <Viewbox>
                                    <TextBox Text="{Binding PoliceStation, Mode=TwoWay}" Style="{StaticResource TextBoxStyle}"
                                        PlaceholderText="Police station" >
                                        <TextBox.Resources>
                                            <ResourceDictionary>
                                                <ResourceDictionary.ThemeDictionaries>
                                                    <ResourceDictionary x:Key="Light">
                                                        <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="Black"/>
                                                        <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="White"/>
                                                        <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="White"/>
                                                        <SolidColorBrush x:Key="TextControlForegroundFocused" Color="Black"/>
                                                        <SolidColorBrush x:Key="TextControlButtonForeground" Color="Black"/>
                                                        <SolidColorBrush x:Key="TextControlButtonForegroundPointerOver" Color="Black"/>
                                                    </ResourceDictionary>
                                                </ResourceDictionary.ThemeDictionaries>
                                            </ResourceDictionary>
                                        </TextBox.Resources>
                                    </TextBox>

                                </Viewbox>
                            </Grid>

                            <Grid Grid.Row="4" Grid.Column="0" Visibility="{Binding DistCorpValidationMsg}">
                                <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Required" x:Name="DistCorpValidationMsg" TextAlignment="Left" TextWrapping="Wrap"
                               FontSize="1" FontWeight="Medium" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"/>
                                </Viewbox>
                            </Grid>
                            <Grid Grid.Row="4" Grid.Column="2" Visibility="{Binding PoliceStatValidationMsg}">
                                <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Required" x:Name="PoliceStatValidationMsg" TextAlignment="Left" TextWrapping="Wrap"
                               FontSize="1" FontWeight="Medium" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"/>
                                </Viewbox>
                            </Grid>
                            <Grid Grid.Row="6" HorizontalAlignment="Stretch" Grid.ColumnSpan="4">
                                <Grid Grid.Row="0" Grid.Column="0"  BorderThickness="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition Width=".5*"></ColumnDefinition>
                                        <ColumnDefinition Width=".5*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Viewbox Grid.Column="1" HorizontalAlignment="Right">
                                        <Button Command="{Binding Path=DeleteAllUserCommand}" Style="{StaticResource ButtonStyle}" FontSize="7" Width="45" Background="#FFCA3636"  >
                                            <Button.Resources>
                                                <ResourceDictionary>
                                                    <ResourceDictionary.ThemeDictionaries>
                                                        <ResourceDictionary x:Key="Light">
                                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FF954444"/>
                                                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#FF954444"/>
                                                        </ResourceDictionary>
                                                    </ResourceDictionary.ThemeDictionaries>
                                                </ResourceDictionary>
                                            </Button.Resources>
                                            <Viewbox>
                                                <TextBlock Visibility="{Binding GenerateUserBtnVis}" FontWeight="Medium" VerticalAlignment="Center"
                                               FontSize="10" Width="45"   Padding="0 0 0 0" Text="Delete All"></TextBlock>
                                            </Viewbox>
                                        </Button>
                                    </Viewbox>
                                    <Viewbox Grid.Column="2" HorizontalAlignment="Right">
                                        <Button Command="{Binding Path=GenerateUserCommand}" Style="{StaticResource ButtonStyle}" FontSize="7" Width="45" Background="#447295"  >
                                            <Button.Resources>
                                                <ResourceDictionary>
                                                    <ResourceDictionary.ThemeDictionaries>
                                                        <ResourceDictionary x:Key="Light">
                                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#447295"/>
                                                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#447295"/>
                                                        </ResourceDictionary>
                                                    </ResourceDictionary.ThemeDictionaries>
                                                </ResourceDictionary>
                                            </Button.Resources>
                                            <Viewbox>
                                                <TextBlock Visibility="{Binding GenerateUserBtnVis}" FontWeight="Medium" VerticalAlignment="Center"
                                               FontSize="10" Width="45"   Padding="0 0 0 0" Text="Generate"></TextBlock>
                                            </Viewbox>
                                        </Button>
                                    </Viewbox>
                                </Grid>

                            </Grid>
                            <Grid Grid.Row="6" Visibility="{Binding GenerateUserBtnProgressRingVis}" HorizontalAlignment="Right" Grid.ColumnSpan="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Viewbox Grid.Column="1" HorizontalAlignment="Right" Margin="0 0 30 0">
                                    <ProgressRing Padding="0 0 0 0" Foreground="White" VerticalAlignment="Center" Height="25" IsActive="True"></ProgressRing>
                                </Viewbox>
                            </Grid>

                            <Grid Grid.Row="4" Grid.Column="0">
                                <TextBlock x:Name="ItemCode" Visibility="Collapsed" Text="{Binding ItemCode, Mode=TwoWay}"></TextBlock>
                            </Grid>
                            <Grid Grid.Row="0" Grid.Column="1">

                                <Viewbox HorizontalAlignment="Left">
                                    <Button Command="{Binding Path=GenerateRandomName}" Width="60" Height="60" Background="Transparent">
                                        <Image Source="/Assets/refresh40.png" />
                                        <Button.Resources>
                                            <ResourceDictionary>
                                                <ResourceDictionary.ThemeDictionaries>
                                                    <ResourceDictionary x:Key="Light">
                                                        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                                                        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
                                                    </ResourceDictionary>
                                                </ResourceDictionary.ThemeDictionaries>
                                            </ResourceDictionary>
                                        </Button.Resources>
                                    </Button>
                                    <ToolTipService.ToolTip>
                                        <ToolTip Placement="Right" Content="Auto Generate"/>
                                    </ToolTipService.ToolTip>
                                </Viewbox>
                            </Grid>

                            <Grid Grid.Row="0" Grid.Column="3">

                                <Viewbox HorizontalAlignment="Left">
                                    <Button Command="{Binding Path=GenerateRandomPassword}" Width="60" Height="60" Background="Transparent">
                                        <Image Source="/Assets/refresh40.png" />
                                        <Button.Resources>
                                            <ResourceDictionary>
                                                <ResourceDictionary.ThemeDictionaries>
                                                    <ResourceDictionary x:Key="Light">
                                                        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                                                        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
                                                    </ResourceDictionary>
                                                </ResourceDictionary.ThemeDictionaries>
                                            </ResourceDictionary>
                                        </Button.Resources>
                                    </Button>
                                    <ToolTipService.ToolTip>
                                        <ToolTip Placement="Right" Content="Auto Generate"/>
                                    </ToolTipService.ToolTip>
                                </Viewbox>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="3" VerticalAlignment="Top">
                            <Viewbox>
                                <controls:DataGrid x:Name="DataGridTTT"
                                 ItemsSource="{Binding UsersList, Mode=OneWay}"
                                SelectedItem="{Binding ItemSelected, Mode=TwoWay}"
                               AutoGenerateColumns="False" 
                               AlternatingRowBackground="White"
                               AreRowDetailsFrozen="True"
                               Background="White"
                               CanUserReorderColumns="True"
                               CanUserResizeColumns="True"
                               CanUserSortColumns="True"
                               GridLinesVisibility="All"
                               HeadersVisibility="Column"
                               SelectionMode="Single"
                               x:DefaultBindMode="TwoWay"
                                CornerRadius="12 5 15 8"
                                Height="280"
                                Width="720"
                                ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.IsVerticalRailEnabled="True"

                               Grid.Row="1" >
                                    <controls:DataGrid.Columns>
                                        <controls:DataGridTextColumn Header="UserName" Binding="{Binding UserName}" Width="180" FontSize="14" IsReadOnly="True"  />
                                        <controls:DataGridTextColumn Header="Password" Binding="{Binding UserPassword}" Width="180" FontSize="14" IsReadOnly="True" />
                                        <controls:DataGridTextColumn Header="Police Station" Binding="{Binding PoliceStation}" Width="200" FontSize="14" IsReadOnly="True"/>
                                        <controls:DataGridTemplateColumn Header="Reset Password"   Width="160">
                                            <controls:DataGridTemplateColumn.CellTemplate >
                                                <DataTemplate >
                                                    <Button Click="btnReset_Click" CommandParameter="{Binding Code}"  HorizontalAlignment="Center" Padding="0" BorderThickness="0" Width="25" Height="25" Background="Transparent">
                                                        <Image Source="/Assets/refresh40.png" />
                                                        <Button.Resources >
